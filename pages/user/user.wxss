page{
  background: #eee;
}
.content{
  position: relative;
}
.user_top{
  padding: 20px;
  background: #e19690;
  text-align: center;
  position: relative;
}
.user_top .avatar{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user_top .name{
  padding-top: 5px;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 5rpx;
}
.user_top .setting{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.user_top .setting image{
  width: 40rpx;
  height: 40rpx;
}
.user_list{
  padding: 0 30rpx;
  background: #fff;
}
.user_list .item{
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.user_list .item .icon{
  width: 50rpx;
  height: 50rpx;
}
.user_list .item .icon image{
  width: 50rpx;
  height: 50rpx;
}
.user_list .item .txt{
  flex: 1;
  line-height: 38rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 30rpx;
}
.user_list .item.equity .txt{
  line-height: 50rpx;
}
.user_list .item .txt .title, .user_list .item .txt .desc{
  display: block;
}
.user_list .item .txt .desc{
  font-size: 20rpx;
}
.user_list .item .txt .desc .light{
  color: #e19690;
}
.right_icon{
    position: absolute;
    right: 10rpx;
    top: 50%;
    color: #333;
    display: inline-block;
    border: solid #ccc;
    border-width: 1rpx 0 0 1rpx;
    transform: rotate(135deg);
    margin-top: -8rpx;
    width: 20rpx;
    height: 20rpx;
}
